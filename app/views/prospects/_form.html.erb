<%= form_for @prospect do |f| %>
  <div class="form-group col-sm-12">
    <%= f.text_field :name, placeholder: "What is your name?", class: 'form-control col-sm-12' %>
  </div>
  <div class="form-group col-sm-12">
    <%= f.text_field :email, placeholder: "What is your email address?", class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <%= f.text_field :phone, placeholder: "What is your phone number?", class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <%= f.text_area :description, placeholder: "What would you like to hire me to do for you?", rows: 10, class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <%= f.text_field :budget, placeholder: "What is your budget?", class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <%= f.text_field :timetable, placeholder: "What is your timeframe for the project?", class: 'form-control' %>
  </div>
  <div class="form-group col-sm-12">
    <%= f.text_field :referral, placeholder: "How did you hear about me?", class: 'form-control' %>
  </div>
  <div class="form-group pull-right">
    <%= f.submit "Submit", class: 'btn btn-default' %>
  </div>
<% end %>